<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fractals.texchat"
    android:versionCode="1"
    android:versionName="0.3" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fractals.texchat.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fractals.texchat.ChatActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.CHAT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="fractals.texchat.LoginPage"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="fractals.texchat.TexActivity"
            android:label="@string/title_activity_tex" >
        </activity>
        <activity
            android:name="fractals.texchat.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="fractals.texchat.AddContactActivity"
            android:label="@string/title_activity_add_contact" >
        </activity>
        <activity
            android:name="fractals.texchat.RegisterActivity"
            android:label="@string/title_activity_register" > 
            
        </activity>
        
    </application>

</manifest>
